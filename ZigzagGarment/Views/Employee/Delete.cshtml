@model Employee

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="pt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Delete Employee
            </h2>
            <hr />

        </div>
        <div asp-validation-summary="All" class="alert-primary">
        </div>
        <div class="mb-3">
            <table class="table-borderless border-2" width="100%">
                <thead>
                </thead>
                <tbody>

                    <tr class="border-spacing">
                        <td width="20%">
                            <label asp-for="EmpNo"></label>
                        </td>

                        <td width="20%">
                            <input asp-for="EmpNo" class="form-control" disabled />
                            <span asp-validation-for="EmpNo" class="text-danger"></span>
                        </td>
                        <td width="5%">
                        </td>
                        <td width="20%">
                            <label asp-for="EmpName"></label>
                        </td>
                        <td width="30%">
                            <input asp-for="EmpName" class="form-control" disabled/>
                            <span asp-validation-for="EmpName" class="text-danger"></span>
                        </td>
                    </tr>


                    <tr class="border-spacing">
                        <td width="20%">
                            <label asp-for="Department"></label>
                        </td>

                        <td width="20%">
                            <input asp-for="Department" class="form-control" disabled />
                        </td>
                        <td width="5%">
                        </td>
                        
                    </tr>
                   

                </tbody>
            </table>

        </div>
        <br />
        <button onclick="return confirm(Are you sure you want to delete Employee)" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-action="Index" asp-controller="Employee" class="btn btn-secondary" style="width:250px">Back to Employee List</a>
    </div>
</form>



@*client side validation*@
@section Scripts{
   
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

